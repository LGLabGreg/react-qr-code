{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/LGLabGreg/react-qr-code.git"
  },
  "packageManager": "pnpm@10.2.1",
  "type": "module",
  "scripts": {
    "dev": "pnpm concurrently --names packages,apps \"pnpm watch:packages\" \"pnpm watch:apps\"",
    "watch:packages": "pnpm --filter \"./packages/**\" run build --watch",
    "watch:apps": "pnpm --filter \"./apps/**\" run dev",
    "build:lib": "pnpm --filter \"./packages/**\" run build",
    "build:app": "pnpm --filter \"./apps/**\" run build",
    "ci:publish": "pnpm build:lib && pnpm publish -r && pnpm changeset tag",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write --config .prettierrc"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.0",
    "@eslint/js": "^9.20.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "3.0.5",
    "concurrently": "^9.1.2",
    "eslint": "^9.20.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.1.1",
    "vitest": "^3.0.5"
  }
}
